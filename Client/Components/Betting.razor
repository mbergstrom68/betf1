@using Blazorise.Components
@using ErgastApi.Responses.Models
@using ErgastApi.Responses.Models.RaceInfo

@inject IDriverService DriverService

<Container>
    @for (int i = 0; i < 20; i++)
    {
        <Row>
            <SelectList 
            TItem="Driver" 
            TValue="string"
            Data="Drivers"
            TextField="@((item) => item.FullName)"
            ValueField="@((item) => item.DriverId)"
            DefaultItemText="Välj förare" />
        </Row>        
    }
</Container>


@code
{

    private IList<Driver> Drivers = new List<Driver>();

    [Parameter]
    public Race? SelectedRace { get; set; }

    private string SelectedDriver = "";

    protected override async Task OnInitializedAsync()
    {        
        Drivers = await DriverService.GetAllDrivers();        
    }
        

}